# Nexus Observatory - Environment Configuration
# Copy this to .env.local and customize

# Observability API endpoint
OBSERVABILITY_API_URL=http://localhost:8001

# API authentication token (change in production!)
OBSERVATORY_API_TOKEN=dev-token-12345

# Prometheus server (for direct queries if needed)
PROMETHEUS_URL=http://localhost:9090

# Update intervals (milliseconds)
NEXT_PUBLIC_METRICS_POLL_INTERVAL=5000
NEXT_PUBLIC_CHART_UPDATE_INTERVAL=15000

# Mapbox access token for World map visualization
NEXT_PUBLIC_MAPBOX_TOKEN=

# Mapbox style configuration (override as needed)
# Defaults point to published styles in the 'xabouch' account
NEXT_PUBLIC_MAPBOX_STYLE_LIGHT=mapbox://styles/xabouch/cmhtqd0q9002n01sc4ez7bmh4
NEXT_PUBLIC_MAPBOX_STYLE_DARK=mapbox://styles/xabouch/cmhtqdthi00a401r03vx01xx9